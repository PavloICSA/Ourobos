{
  "name": "ouroboros-chimera",
  "version": "0.1.0",
  "description": "OuroborOS-Chimera - A self-modifying digital organism using WebAssembly (Rust, Fortran, ALGOL, Lisp) with blockchain governance, quantum entropy, and biological sensors",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:quick": "vite build",
    "build:optimized": "npm run build:all && npm run optimize:wasm && npm run build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "build:all": "npm run build:contracts && npm run build:wasm",
    "build:wasm": "npm run build:rust && npm run build:fortran && npm run build:go && npm run build:pascal",
    "build:rust": "cd wasm/rust && wasm-pack build --target web --out-dir ../../public/wasm/rust",
    "build:fortran": "cd wasm/fortran && bash build.sh",
    "build:go": "cd wasm/go && bash build_go_wasm.sh",
    "build:pascal": "cd wasm/pascal && bash build_pascal.sh",
    "build:contracts": "cd contracts && npx hardhat compile",
    "optimize:wasm": "bash scripts/optimize-wasm.sh",
    "optimize:wasm:win": "scripts\\optimize-wasm.cmd",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "blockchain:start": "cd contracts && npx hardhat node",
    "quantum:start": "cd services/quantum && python quantum_entropy.py",
    "biosensor:start": "cd services/biosensor && python bio_sensor_node.py",
    "services:start": "docker-compose up -d",
    "analyze": "vite build --mode analyze"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "hardhat": "^2.19.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "ethers": "^6.9.0"
  }
}
