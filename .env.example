# OuroborOS-Chimera Environment Configuration Example
# Copy this file to .env and configure for your environment

# ============================================================================
# Blockchain Configuration
# ============================================================================
# RPC URL for Ethereum node (Hardhat, Ganache, or public testnet)
VITE_BLOCKCHAIN_RPC=http://localhost:8545

# Deployed OuroborosDAO contract address (set after deployment)
VITE_CONTRACT_ADDRESS=

# Chain ID (1337 for Hardhat, 1 for mainnet, 11155111 for Sepolia)
VITE_CHAIN_ID=1337

# Enable/disable blockchain governance
VITE_ENABLE_BLOCKCHAIN=true

# ============================================================================
# Quantum Entropy Service
# ============================================================================
# Quantum service API URL
VITE_QUANTUM_API=http://localhost:5000

# Use mock quantum entropy (classical fallback)
VITE_QUANTUM_MOCK=false

# Enable/disable quantum entropy service
VITE_ENABLE_QUANTUM=true

# ============================================================================
# Bio Sensor Network
# ============================================================================
# Bio sensor node API URL (Raspberry Pi)
VITE_BIOSENSOR_API=http://raspberrypi.local:5001

# Use mock bio sensor readings
VITE_BIOSENSOR_MOCK=false

# Enable/disable bio sensor integration
VITE_ENABLE_BIOSENSOR=true

# Bio sensor API key (frontend)
VITE_BIOSENSOR_API_KEY=

# ============================================================================
# Development Mode
# ============================================================================
# Mock all external services (blockchain, quantum, bio sensors)
VITE_MOCK_ALL=false

# Enable verbose logging
VITE_VERBOSE=false

# Enable debug mode
VITE_DEBUG=false

# ============================================================================
# Backend Service Configuration (for service containers)
# ============================================================================
# Quantum Service (Backend)
QISKIT_API_TOKEN=your_ibm_quantum_token_here

# Bio Sensor Service (Backend)
BIOSENSOR_API_KEY=your_api_key_here

# ============================================================================
# Quick Start Configurations
# ============================================================================

# Full Local Development (all services running locally):
# VITE_BLOCKCHAIN_RPC=http://localhost:8545
# VITE_QUANTUM_API=http://localhost:5000
# VITE_BIOSENSOR_API=http://localhost:5001
# VITE_MOCK_ALL=false

# Mock Mode (no external services required):
# VITE_MOCK_ALL=true
# VITE_ENABLE_BLOCKCHAIN=false
# VITE_QUANTUM_MOCK=true
# VITE_BIOSENSOR_MOCK=true

# Hybrid Mode (blockchain only, mock quantum and sensors):
# VITE_ENABLE_BLOCKCHAIN=true
# VITE_QUANTUM_MOCK=true
# VITE_BIOSENSOR_MOCK=true
